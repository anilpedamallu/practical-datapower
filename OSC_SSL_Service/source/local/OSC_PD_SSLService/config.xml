<Services>
  <Service env="DEV" URL="/dp/OSC_PD_SSLService/echo">
    <allow issuer="self-signed">
      <DN>/C=CA/ST=Ontario/L=Toronto/O=Orange Specs Incorporated/OU=Consulting/CN=client-1</DN>
    </allow>
    <allow issuer="VeriSign">
      <CN>client-1</CN>
    </allow>
    <endpoint>
      <hostname>localhost</hostname>
      <port>8888</port>
    </endpoint>
  </Service>
  <Service env="IST" URL="/dp/OSC_PD_SSLService">
    <allow issuer="self-signed">
      <CN>client-2</CN>
    </allow>
    <endpoint>
      <hostname>localhost</hostname>
      <port>8888</port>
    </endpoint>
  </Service>
</Services>